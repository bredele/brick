.showcase {
	position:fixed;
	top:0; left:0;
	width:100%; height:100%;
	background:#121212;
	overflow: scroll;
}

.toolbar {
	height:52px;
	margin-bottom:52px;
	background:#1E1E1E;
}

.toolbar-btn {
	font-size: 1.5em;
	cursor:pointer;
	color:#cccbd0;
	line-height:52px;
	padding:0 16px;
	background:rgba(255, 255, 255, .05);
}


.toolbar-btn:hover {
	cursor:pointer;
	color:white;
}

.examples {
	height:100%;
}


.example {
	height: 100%;
	width: 70%;
}

.examples-list {
	list-style:none;
	width:20%;
	margin-right:10%;
	height:100%;
}

.example-link {
	display:block;
	padding:0 14px;
	color:grey;
	line-height:42px;
}

.example-link.selected {
	color:white;
	font-size:1.3em;
}


.example-link:hover {
	font-size:1.3em;
	background:rgba(255, 255, 255, .05);
}

.example-title {
	color:white;
}

.stack {
	padding-top:100px;
}