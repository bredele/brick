.showcase {
	position:fixed;
	top:0; left:0;
	width:100%; height:100%;
	background:#121212;
	overflow: scroll;
}

.toolbar {
	height:52px;
	background:#1E1E1E;
}

.toolbar-btn {
	font-size: 1.5em;
	cursor:pointer;
	color:#cccbd0;
	line-height:52px;
	padding:0 16px;
	background:rgba(255, 255, 255, .05);
}


.toolbar-btn:hover {
	cursor:pointer;
	color:white;
}

.stack {
	padding-top:100px;
}